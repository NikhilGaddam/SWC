    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_triangle"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="218sp"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="200sp"
            android:src="@drawable/login_illustration"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60sp"
            android:src="@drawable/welcome_text_login"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_weight="2.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/lgn_outlook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:layout_marginBottom="110sp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/login_btn_shape"
            android:fontFamily="@font/montserrat"
            android:letterSpacing="0.1"
            android:text="LOGIN WITH OUTLOOK"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80sp"
            android:fontFamily="@font/montserrat"
            android:text="Or"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/guest_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50sp"
            android:fontFamily="@font/montserrat"
            android:letterSpacing="0.1"
            android:text="Continue as Guest"
            android:textSize="16sp" />

    </RelativeLayout>



